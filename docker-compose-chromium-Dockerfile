FROM linuxserver/chromium

ARG INSTALL_CHINESE_FONTS=false

RUN if [ "$INSTALL_CHINESE_FONTS" = "true" ]; then \
    apt-get update && apt-get install -y \
        fonts-arphic-ukai \
        fonts-arphic-uming \
        fonts-ipafont-mincho \
        fonts-ipafont-gothic \
        fonts-unfonts-core \
    && rm -rf /var/lib/apt/lists/*; \
    fi